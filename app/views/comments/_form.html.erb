<%= form_for([topic, comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :topic_id %>
  <div class="field ">
    <%= f.text_field :content, placeholder: "コメントの内容", class:"form-control" %>
  </div><br />
  <div class="actions">
    <%= f.submit 'コメントを投稿', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
