<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>コメントを編集</h2>
    <%= form_for([topic, comment]) do |f| %>
      <%= f.error_messages! %>
      <%= f.hidden_field :topic_id %>
      <div class="field ">
        <%= f.text_field :content, placeholder: "内容", class:"form-control" %>
      </div><br />
      <div class="actions">
        <%= f.submit class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
