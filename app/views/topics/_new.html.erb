<div class="post_index">
  <%= form_for(@topic) do |f| %>
    <%= f.error_messages! %>
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control' %><br />
    <%= f.label :内容 %>
    <%= f.text_field :content, placeholder: '今なにしてる？', class: 'form-control form_post_index' %>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block button-margin' %>
  <% end %>
</div>
