<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h2>投稿一覧</h2>

    <% @topics.each do |topic| %>
      <div class="post">
        <h3 class="topic_title">タイトル：<%= topic.title %></h3>
        <p>投稿者：<%= topic.name %>さん</p>
        <p>内容：<%= topic.content %></p>
        <%= link_to '編集', edit_topic_path(topic), class: 'btn btn-default btn-sm btn btn-success' %>
        <%= link_to '詳細', topic_path(topic) , class: 'btn btn-default btn-sm btn btn-primary'%>
        <%= link_to '削除', topic_path(topic), method: :delete, class: 'btn btn-default btn-sm btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
