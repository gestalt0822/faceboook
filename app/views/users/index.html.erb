<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
    <% unless user.id == current_user.id %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 each_user">
        <% if user.provider.blank? %>
          <p><%= image_tag user.avatar, size: '70x70' %></p>
        <% else %>
          <p><%= image_tag user.image_url, size: '70x70' %></p>
        <% end %>
        <p><%= user.name %></p>
        <p class="email"><%= user.email %></p>
        <%= link_to '詳細', user_path(user.id) , class: 'btn btn-default btn-xs btn btn-primary'%>
        <%= render 'follow_form', user: user %>
        <% if current_user.followed?(user) && current_user.following?(user) %>
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
